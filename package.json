{
  "name": "mkdocs-material-linter",
  "displayName": "Mkdocs Material Linter",
  "description": "A VS Code linter and highlighter for MkDocs Material syntax (admonitions, tabs, tables, and more).",
  "publisher": "ytianle",
  "version": "1.2.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ytianle/Mkdocs_Material_Linter_Extension-Jan2026.git"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:mdx"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mdx",
        "aliases": [
          "MDX"
        ],
        "extensions": [
          ".mdx"
        ]
      }
    ],
    "commands": [
      {
        "command": "mkdocs-material-linter.toggleUnderline",
        "title": "MkDocs Material: Toggle Underline (^^)"
      }
    ],
    "keybindings": [
      {
        "command": "mkdocs-material-linter.toggleUnderline",
        "key": "ctrl+u",
        "mac": "cmd+u",
        "when": "editorTextFocus && !editorReadonly"
      }
    ],
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "mkdocs-material-linter.markdown",
        "path": "./syntaxes/mkdocs-material-linter.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      },
      {
        "scopeName": "mkdocs-material-linter.codefence",
        "path": "./syntaxes/mkdocs-material-codefence.tmLanguage.json",
        "injectTo": [
          "markup.fenced_code.block.markdown"
        ]
      }
    ],
    "themes": [
      {
        "label": "MkDocs Material Linter (Light)",
        "uiTheme": "vs",
        "path": "./themes/mkdocs-material-linter-color-theme.json"
      },
      {
        "label": "MkDocs Material Linter (Dark)",
        "uiTheme": "vs-dark",
        "path": "./themes/mkdocs-material-linter-color-theme-dark.json"
      }
    ],
    "configuration": {
      "title": "MkDocs Material Linter",
      "properties": {
        "mkdocs-material-linter.checkBlankLineBeforeList": {
          "type": "boolean",
          "default": false,
          "description": "Require blank lines before lists for style consistency. Note: Paragraphâ†’List errors are always reported regardless of this setting (parsing issue)."
        },
        "mkdocs-material-linter.checkBlankLineBeforeAdmonitionContent": {
          "type": "boolean",
          "default": false,
          "description": "Check that admonition content starts after a blank line (unless it's a list)."
        },
        "mkdocs-material-linter.checkIndentation": {
          "type": "boolean",
          "default": true,
          "description": "Check that admonition and tab content is properly indented."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
